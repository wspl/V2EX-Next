<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_alpha="30"
    app:rv_color="#16a085"
    app:rv_rippleDuration="250">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="12dp"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/topic_avatar" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不靠谱茶话会"
                    android:background="@drawable/shape_node"
                    android:id="@+id/topic_node"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plqws"
                    android:id="@+id/topic_author"
                    android:layout_marginLeft="8dp"
                    android:textColor="#778087"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长者教导我们不要天天搞个大新闻"
                android:id="@+id/topic_title"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:textColor="#778087"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="肛肛"
                    android:id="@+id/topic_last_reply_time"
                    android:textSize="11sp"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textView2"
                    android:textSize="11sp"
                    android:textColor="#cccccc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最后回复"
                    android:id="@+id/textView3"
                    android:textSize="11sp"
                    android:textColor="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plqws"
                    android:id="@+id/topic_last_reply_user"
                    android:textSize="11sp"
                    android:textColor="#778087"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="845"
                android:id="@+id/topic_replies"
                android:layout_alignWithParentIfMissing="false"
                android:background="@drawable/sharp_reply_count_1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentStart="false"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </LinearLayout>

</com.andexert.library.RippleView>